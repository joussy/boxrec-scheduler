{
  "version": "2.0.2",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "target": "es5",
    "types": [ "mocha", "chai", "node" ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [ "es5", "es6" ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "lib/"
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "!node_modules/@types",
    "**/*.spec.ts"
  ]
}
