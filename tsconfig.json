{
  "compilerOptions": {
    "module": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "target": "es2015",
    "types": [ "mocha", "chai", "node" ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": ["es2015", "es2015.collection", "es2015.core", "es2015.generator", "es2015.iterable", "es2015.promise"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "lib/"
  },
  "include": [
    "src/*.ts",
    "Tests/*.ts"
  ],
  "exclude": [
    "node_modules",
    "!node_modules/@types",
    "**/*.spec.ts"
  ]
}
